
<div class='container' style="text-align: center;">
  <hr/>
  <div class="container text-right">
    <%  if (flashMessages.loginerror){ %>
                <div class="alert alert-danger"> <%= flashMessages.loginerror %> </div>    
                <% } %>
      </div>
  <h1>تسجيل الدخول</h1>
        <form method="POST" action="/users/login">
         
            <div class="form-group" dir="rtl" align="right" >
              <label for="email">البريد الإلكتروني</label>
              <input type="email" class="form-control" name="email"  placeholder="البريد الإلكتروني" >
            </div>
            <div class="form-group" dir="rtl" align="right" dir="rtl"  >
                <label for="exampleInputPassword1">كلمة المرور</label>
                <input type="password" class="form-control" name="password" placeholder="كلمة المرور">
              </div>
              
<div align="left"> 
              <button type="submit" class="btn btn-primary" align="left">تسجيل الدخول</button>
            </div>
            </form>



</div>