<style>
    #h1{
  font-size:30px; 
  
   padding:10px;
   text-align: center;
  }
  
  </style>        
  <br/>     
<div class="container" style="text-align: right;"> 
    <div id="h1"class="p-3 mb-2 bg-light text-dark">مشاريعي</div>
    <br/>
                     
<% if(typeof(projects)!='undefined') { %>
                                                                       
  <% projects.forEach(project => {    %>
    <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= project.title %></h4>
      <p class="card-text"> <%= project.description %> </p>
      <p class="card-text">أنشئ بواسطة:  <%= project.userId.name %> </p>
      <a class="btn btn-primary ml-grid-gutter d-none d-lg-inline-block"> <%= project.budget %> ريال سعودي </a>  
      <a class="btn btn-primary ml-grid-gutter d-none d-lg-inline-block" href="/proposals/<%=project._id%>/show">العروض</a>
    </div>
  </div>
  <br/>
<%}) }%>                   
                                        </div>
                                </div>
     
    </div>                  