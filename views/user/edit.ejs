
<br><br>
<form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">
    <div class="form-group" dir="rtl" align="right" >
      <label for="name">اسم المستخدم</label>
      <input type="text" class="form-control" name="name" value="<%= user.name %>" placeholder="اسم المستخدم" aria-describedby="emailHelp">
   
    
    <div class="form-group" dir="rtl" align="right" >
      <label for="email">البريد الإلكتروني</label>
      <input type="email" class="form-control" name="email"   value="<%=user.email%>" placeholder="البريد الإلكتروني" >
    </div>
    <div class="form-group" dir="rtl" align="right" dir="rtl" align="right" >
        <label for="exampleInputPassword1">كلمة المرور</label>
        <input type="password" class="form-control" name="password" value="<%=user.password%>" placeholder="كلمة المرور">
      </div>
      <div class="form-group" dir="rtl" align="right" >
        <label for="gender">الجنس</label>
        <select class="form-control" name="gender"  value="<%=user.gender%>">
          <option value="male">ذكر</option>
          <option value="female">انثى</option>
        </select>
      </div>

      <div class="form-group" dir="rtl" align="right" >
        <label for="bio">نبذة</label>
        <textarea class="form-control" type="text" name="bio" value="<%=user.bio%>" rows="4" placeholder="نبذة"> <%=user.bio%></textarea>
      </div>
 

      <button type="submit" class="btn btn-primary" role="button" aria-pressed="true">حفظ التغييرات</button>

    </form> 