<html lang="ar" dir="rtl" >
    <head>
    <meta charset="UTF-8">
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

   <title>المشاريع</title>

<style type="text/css">
body{
    text-align: right;
}
</style>


</head>
   <body > 
              
                   <br/> 
                   
                   <div class="container" dir="rtl" align="right" dir="rtl" align="right" >
                       <div id="h1"class="p-3 mb-2 bg-light text-dark">المشاريع</div>
                       <br></br>                                                                   

<div class="container mt-3">
<div class="row">
<div id="content" class=" col-lg-12">
           <div class="card p-3">
   <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

<% projects.forEach(project => { %>
<div align="left" dir="rtl">
    <a href="/projects/search/<%= project._id %>"> <button type="button" class="btn btn-info"><%= project.type %></button></a>
    </div>
    <%}) %>  
<br><br>

<% if(typeof(projects)!='undefined') { %>
                                                                       
              <div class="card">
              <div class="card-body">
                <% projects.forEach(project => {    %>
                <h4 class="card-title"><%= project.title %></h4>
                <p class="card-text"> <%= project.description %> </p>
                <p class="card-text">أنشئ بواسطة:  <%= project.userId.name %> </p>
                <p class="btn btn-info"> <%= project.budget %> ريال سعودي </p>  
                <p class="btn btn-info"> <%= project.postedDate %></p> <br>
                <% if(loggedIn){%>
                    <form method="POST" action="/proposals/<%= currentUser._id %> /<%= project._id %>/submit">
                    <button class="btn btn-info" type="submit">تقديم عرض</button>
                </form>
                <% }%>
              </div>
            </div>
     
        <%}) }%>                                                
      
               </div>
           </div>
           </div>

</div></div>
   </body>
