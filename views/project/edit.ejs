<head>
  <style>
    h2 {
      font-size: 50px;

    }
  </style>
</head>

<body
  class="page-template page-template-post-new-page-template page-template-post-new-page-template-php page page-id-11 logged-in elementor-default">
  <div class="flex-fill">
    <div class="header py-3">
      <div id="project-theme-page-template-1">
        <br />

        <div class="d-sm-flex align-items-center justify-content-between pb-4 text-center text-sm-right">
          <h1 class="h3 mb-2 text-nowrap">تعديل بيانات مشروع</h1>
        </div>      
        
        <div class="row" style="text-align: right;font-size: 25px;">
          <div id="content">
            <div class="card p-3">

              <% projects.forEach(project => { %>
              <div class="sonita2">
                <form method="post" action="/projects/<%=project._id %>/update?_method=PUT">
                  <div class="row">
                    <div class="col-sm-9">
                      <div class="form-group">
                          <label for="name">عنوان المشروع</label>
                          <input type="text" value="<%=project.title %>" size="50" class="form-control" name="title"
                          placeholder="عنوان المشروع">                      </div>
                    </div>
                    <div class="col-sm-9">
                      <label for="name">وصف المشروع</label>
                      <textarea rows="6" cols="60" class="form-control" placeholder="وصف للمشروع"
                          name="description"><%=project.description %></textarea>
                    </div>
                    <div class="col-sm-4">
                      <label for="name">المهارات المطلوبة</label>
                      <input type="text" size="50" value="<%=project.requiredSkills %>" class="form-control"
                          name="requiredSkills" placeholder="المهارات المطلوبة">
                    </div>
                    <div class="col-sm-4">
                      <label for="name">ميزانية المشروع</label>

                        <input type="number" required="" size="50" value="<%=project.budget %>" class="form-control"
                          name="budget" placeholder="الميزانية بالريال السعودي" value="10000">
                    </div>
                    <div class="col-12">
                      <hr class="mt-2 mb-4">
                      <div class="d-flex flex-wrap justify-content-between align-items-center">
                    <button class="btn btn-primary mt-3 mt-sm-0" type="submit">تعديل</button>
                      </div></div></div>
                  
                </form>
                <% }) %>

              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</body>